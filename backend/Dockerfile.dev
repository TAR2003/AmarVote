FROM maven:3.9-eclipse-temurin-21

WORKDIR /app

# Create logs directory with proper permissions
RUN mkdir -p /app/logs && chmod 777 /app/logs

# Copy only the POM file first to cache dependencies
COPY pom.xml .
RUN mvn dependency:go-offline -B

# Copy the rest of the source code
COPY src ./src

# Package the application first (this ensures spring-boot plugin is available)
RUN mvn clean package -DskipTests

EXPOSE 8080

# Run the pre-built JAR file instead of using spring-boot:run
CMD ["java", "-jar", "target/amarvote-0.0.1-SNAPSHOT.jar"]